<span class='floatr'>
  <%= link_to "Current Month", :month => (Date.today.beginning_of_month).strftime("%Y-%m") %>
</span>

<div id="calendar">
  <%= calendar_for(@quotes, :year => @date.year, :month => @date.month, :html => {:class => 'monthly'}) do |t| %>
    <h2 id="month">
      <%= link_to '&#x2190;'.html_safe, :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to "&#x2192;".html_safe, :month => (@date.end_of_month+1).strftime("%Y-%m") %>
    </h2>
    <%= t.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun') %>
    <%= t.day(:day_method => :removal_at) do |day, quotes| %>
      <%= day.day %>
      <%= link_to day, daily_quotes_path(:day => day), :style => "display: none;", :class => "daily" %>
      <ul>
      <% quotes.each do |quote| %>
        <li><%= content_tag :span, quote.removal_at.strftime("%H:%M"), :class => "time" %> <%= status_tag quote.client.name, :level => calendar_item_level(quote), :class => "client", "data-content" => "#{render('monthly_popover', quote: quote)}", "data-original-title" => "#{quote.removal_at.strftime('%H:%M')} #{quote.client.name}", :style => "position: relative;" %></li>
      <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".client")
      .popover({
          // offset: 10,
          trigger: 'manual',
          animate: false,
          html: true,
          placement: 'top',
          template: '<div class="popover" onmouseover="$(this).mouseleave(function() {$(this).hide(); });"><div class="arrow"></div><div class="popover-inner"><h3 class="popover-title"></h3><div class="popover-content"><p></p></div></div></div>'
      }).click(function(e) {
          e.preventDefault() ;
      }).mouseenter(function(e) {
          $(this).popover('show');
      });
    $('#calendar td').click(function() {
      window.location = $(this).find('.daily').attr('href');
    });
  });
</script>