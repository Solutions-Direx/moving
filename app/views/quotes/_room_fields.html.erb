<%= f.input :size, :label => "Room #{current_child_index(f, false)}", :label_html => {:class => "room-number"}, :wrapper_class => "room", :required => false do %>
  <%= f.input_field :size, :as => :radio_buttons, :collection => Room::SIZES, :item_wrapper_class => 'inline' %>
  <%= f.input_field :comment, :as => :string, :placeholder => "Comment", :class => 'comment_one_liner', :style => 'width:210px;' %>
  <%= f.link_to_remove "Remove" %>
<% end %>
