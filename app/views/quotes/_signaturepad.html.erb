<div class="modal" id="signature">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Signature</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for(@quote, :url => sign_quote_path(@quote), :method => :post, :html => {:class => "sigPad", :id => "frm-quote", :style => "width: 100%;"}) do |f| %>
      <%= f.error_notification %>
      <!-- SIGNATURE -->
      <label for="name" class="sig-label">Print your name</label>
      <%= f.text_field :signer_name, :class => "sig-input name" %>
      <ul class="sigNav">
        <li class="clearButton"><a href="#clear">Clear</a></li>
      </ul>
      <div class="sig sigWrapper">
        <div class="typed"></div>
        <canvas class="pad" width="500"></canvas>
        <%= f.hidden_field :signature, :class => "output" %>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
     <a href="#" class="btn btn-success" id="submit-quote">Approve</a>
   </div>
</div>