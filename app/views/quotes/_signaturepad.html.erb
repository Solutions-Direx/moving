<div class="modal" id="signature">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Signature</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for([@quote, @quote.removal], :url => sign_quote_removal_path(@quote, @quote.removal), :method => :post, :html => {:class => "sigPad", :id => "frm-removal", :style => "width: 100%;"}) do |f| %>
      <%= f.error_notification %>
      <!-- SIGNATURE -->
      <label for="name" class="sig-label">Print your name</label>
      <%= f.text_field :signer_name, :class => "sig-input name" %>
      <ul class="sigNav">
        <li class="clearButton"><a href="#clear">Clear</a></li>
      </ul>
      <div class="sig sigWrapper">
        <div class="typed"></div>
        <canvas class="pad" width="500"></canvas>
        <%= f.hidden_field :signature, :class => "output" %>
      </div>
      
      <!-- FRANCHISE OPTIONS -->
      <div id="franchise-options" style="display: none;">
        <br />
        <h3>Options</h3>
        <div class="form-inputs">
          <%= f.input :insurance_limit_enough, :label => "Est-ce suffisant?", :as => :radio_buttons, :collection => [['Oui', true],['Non', false]], :item_wrapper_class => "inline" %>
          <%= f.input :insurance_increase, :wrapper_html => {:id => "insurance_increase", :style => "display: #{@quote.removal.insurance_limit_enough.nil? || @quote.removal.insurance_limit_enough? ? 'none' : 'block'}"} do %>
            <div class='input-append'>
              <%= f.text_field :insurance_increase, :class => 'span1 input-append' %><span class="add-on">$</span>
            </div>
          <% end %>

          <%= f.input :franchise_cancellation, :as => :radio_buttons, :collection => [["Oui (#{current_account.franchise_cancellation_amount}$)", true],['Non', false]], :item_wrapper_class => "inline" %>
        </div>
      </div>
      <!-- <button type="submit">I accept the terms of this agreement.</button> -->
    <% end %>
  </div>
  <div class="modal-footer">
     <a href="#" class="btn btn-primary" id="edit-removal">Edit</a>
     <a href="#" class="btn btn-success" id="submit-removal">Approve</a>
   </div>
</div>