<div class="modal" id="signature">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Signature</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for([@quote, @invoice], :url => sign_mobile_quote_invoice_path(@quote), :method => :post, :html => {:class => "sigPad", :id => "frm-invoice", :style => "width: 100%;"}) do |f| %>
      <%= f.error_notification %>
      <!-- SIGNATURE -->
      <label for="name" class="sig-label"><%= t 'print_your_name' %></label>
      <%= f.text_field :signer_name, :class => "sig-input name" %>
      <ul class="sigNav">
        <li class="clearButton"><a href="#clear"><%= t 'clear' %></a></li>
      </ul>
      <div class="sig sigWrapper">
        <div class="typed"></div>
        <canvas class="pad" width="500"></canvas>
        <%= f.hidden_field :signature, :class => "output" %>
      </div>
      <%= f.text_area :client_satisfaction, :style => "display:none;" %>
    <% end %>
  </div>
  <div class="modal-footer">
     <a href="#" class="btn btn-success" id="submit-invoice"><%= t 'approve' %></a>
   </div>
</div>