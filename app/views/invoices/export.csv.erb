<%- headers = [
    Invoice.model_name.human, 
    'Date', 
    'Client', 
    "#{t 'address'}", 
    "#{t 'payment_method'}", 
    "#{t 'deposit_name'}", 
    'Grand Total', 
    "#{t 'tax'}1", 
    "#{t 'tax'}2", 
    "#{t 'tip'}", 
    'Total'] -%>
<%= CSV.generate_line headers -%>
<%- @invoices.order('created_at DESC').each do |invoice| -%>
<%- row = [
    invoice.code, 
    l(invoice.updated_at.to_date, :format => :long), 
    invoice.quote.client.name, 
    invoice.quote.client.address.to_s, 
    invoice.payment_method.present? ? t(invoice.payment_method) : '',
    invoice.quote.deposit.present? ? invoice.quote.deposit.amount : '',
    invoice.grand_total, 
    invoice.tax1_amount, 
    invoice.tax2_amount,
    invoice.try(:tip) || 0,
    invoice.total] -%>
<%= CSV.generate_line(row).html_safe -%>
<%- end -%>