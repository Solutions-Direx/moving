<h1><%= Truck.model_name.human + 's' %>
  <span class='submenu'><%= icon_button_link_to 'New Truck', new_truck_path, icon: "plus", level: "inverse", large: true, white: true %></span>
</h1>

<table class="table table-striped">
  <tr>
    <th>Nom</th>
    <th>Plaque</th>
    <th>En service</th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.name %></td>
    <td><%= truck.plate %></td>
    <td><%= truck.available? ? 'Oui' : 'Non' %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
    <td><%= link_to 'Destroy', truck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>