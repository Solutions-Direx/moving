<h1><%= Truck.model_name.human + 's' %>
  <span class='submenu'><%= icon_button_link_to "#{t 'new'} #{Truck.model_name.human}", new_truck_path, icon: "plus", level: "inverse", large: true, white: true %></span>
</h1>

<table class="table table-striped">
  <tr>
    <th><%= t 'name' %></th>
    <th><%= t 'plate' %></th>
    <th><%= t 'in_service' %></th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.name %></td>
    <td><%= truck.plate %></td>
    <td><%= truck.available? ? "#{t 'yessai'}" : "#{t 'nope'}" %></td>
    <td><%= link_to "#{t 'edit'}", edit_truck_path(truck) %></td>
    <td><%= link_to "#{t 'destroy'}", truck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>