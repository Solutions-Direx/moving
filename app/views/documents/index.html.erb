<h1>Listing documents</h1>

<p><%= icon_button_link_to 'New document', new_document_path, :icon => "plus", :level => "primary", :white => true %></p>

<%= paginate @documents %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Updated At</th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= link_to document.name, document %></td>
    <td><%= document.updated_at.strftime('%B %d, %Y %H:%M') %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= paginate @documents %>