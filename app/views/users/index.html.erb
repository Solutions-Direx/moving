<h1><%= User.model_name.human + 's' %>
  <span class='submenu'><%= icon_button_link_to "#{t 'new_user'}", new_user_path, icon: "plus", level: "inverse", large: true, white: true %></span>
</h1>

<%= paginate @users %>

<table class="table table-striped">
  <tr>
    <th><%= sortable "first_name", "#{t 'name'}" %></th>
    <th><%= sortable "#{t 'username'}" %></th>
    <th><%= sortable "email" %></th>
    <th><%= sortable "#{t 'role'}" %></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.full_name, user %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= t(user.role) %></td>
    <td><%= link_to "#{t 'edit'}", edit_user_path(user) %></td>
    <td><%= link_to "#{t 'destroy'}", user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= paginate @users %>

