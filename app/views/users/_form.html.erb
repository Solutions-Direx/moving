<% if @user.new_record? %>
  <div class="alert alert-info">An email with default password will be sent to the user once you create it.</div>
<% end %>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :role, :as => :select, :collection => User::Role.options %>
  </div>

  <div class="form-actions">
    <p><%= submit_or_cancel(f) %></p>
  </div>
<% end %>
