<h2><%= t ".title", default: "Edit profile" %></h2>

<%= simple_form_for(@user, :url => profile_path, :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email, :required => true %>
  <%= f.input :localization, label: "Language", collection: [["English", "en"], ["FranÃ§ais", "fr"]], include_blank: false  %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  
  <div class="form-actions">
    <%= submit_or_cancel(f, "Update profile") %>
  </div>
<% end %>