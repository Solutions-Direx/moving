# common js runner
$ ->
  $(document).controls()
  
  $('.modal #close').click ->
    $('#modal-form').modal('hide')
    return false
  
  $('.modal #submit-form').click ->
    $('#modal-form').find('form').submit()
    return false  
  
  locale = <% I18n.locale.to_s %>
  if locale == "fr"
    $('.datepicker').datepicker($.datepicker.regional["fr"]);
  else  
    $('.datepicker').datepicker($.datepicker.regional["en-GB"]);